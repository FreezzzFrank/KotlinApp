<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kotlinapp">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".KTApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Kotlinapp">
        <activity android:name=".pages.MainActivity"
            android:theme="@style/Theme.Kotlinapp.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".pages.activities.GardenActivity"
            android:label="GardenActivity"/>
        <activity
            android:name="com.example.kotlinapp.sample.githubbrowser.pages.GithubBrowserActivity"
            android:label="GithubBrowserActivity"/>
        <activity android:name=".sample.paging.ui.activity.PagingActivity"
            android:label="PagingLocalActivity"/>
        <activity android:name=".sample.doggo.ui.DoggoActivity"
            android:label="Doggo Paging"/>
    </application>

</manifest>