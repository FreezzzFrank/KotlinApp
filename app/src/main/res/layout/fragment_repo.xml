<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="androidx.lifecycle.LiveData"/>
        <import type="com.example.kotlinapp.data.remote.Resource"/>
        <import type="com.example.kotlinapp.sample.githubbrowser.repository.db.entities.Repo"/>

        <variable
            name="repo"
            type="LiveData&lt;Resource&lt;Repo>>" />
        <variable
            name="contributorsStatus"
            type="com.example.kotlinapp.data.remote.Status" />
        <variable
            name="retryCallback"
            type="com.example.kotlinapp.data.common.RetryCallback" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            style="@style/TextAppearance.MaterialComponents.Headline4"
            tools:text="Name"
            app:isVisible="@{repo.data != null}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginHorizontal="@dimen/margin_small"
            android:text="@{@string/repo_full_name(repo.data.owner.login, repo.data.name)}"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/description"
            style="@style/TextAppearance.MaterialComponents.Body1"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_small"
            app:isVisible="@{repo.data != null}"
            android:text="@{repo.data.description}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name"
            tools:text="Description" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/contributor_list"
            android:layout_margin="@dimen/margin_small"
            tools:listitem="@layout/list_item_contributor"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@+id/description"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <include
            layout="@layout/loading_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:resource="@{(Resource)repo}"
            app:callback="@{() -> retryCallback.retry()}"
            android:layout_margin="@dimen/margin_small"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>